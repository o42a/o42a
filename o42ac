#!/bin/sh
#
# o42a Compiler
#

set -o pipefail

blue=$'\033[1;34m'
green=$'\033[0;32m'
red=$'\033[0;31m'
white=$'\033[1;37m'


JAR_DIR=${JAR_DIR:-"`dirname $0`/target"}
JAR=${JAR:-"${JAR_DIR}/org.o42a.cl-0.1.0.jar"}
JAVA_LIBRARY_PATH=${JAVA_LIBRARY_PATH:-"`dirname $0`/target"}
JAVA=${JAVA:-java}
CC=${CC:-gcc}
ICU_CONFIG=${ICU_CONFIG:-icu-config}

temp_fd=/dev/fd/5

o42ac_args=(-o${temp_fd})
vm_args=(-Djava.library.path="${JAVA_LIBRARY_PATH}")
cc_args=(-x assembler -)
append_arg="o42ac"

for arg in "$@"; do
	if [[ "${arg}" == "--" ]]; then
		append_arg="cc"
	elif [[ "${arg}" == "--vmargs" ]]; then
		append_arg="vm"
	elif [[ "${arg}" == "--nocolor" ]]; then
		blue=""
		green=""
		red=""
		white=""
	elif [[ ${append_arg} == "cc" ]]; then
		cc_args[${#cc_args[*]}]="${arg}"
	elif [[ ${append_arg} == "vm" ]]; then
		vm_args[${#vm_args[*]}]="${arg}"
	else
		o42ac_args[${#o42ac_args[*]}]="${arg}"
	fi
done

pipe_if_not_empty () {
	head=$(dd bs=1 count=1 2>/dev/null; echo a)
	head=${head%a}
	if [ "x$head" != x"" ]; then
		{ printf %s "$head"; cat; } | "$@"
	fi
}

{ 
	{
		{
			${JAVA} "${vm_args[@]}" -jar "${JAR}" "${o42ac_args[@]}"
			error=$?
			if (( error != 0 )) ; then
				if (( error > 3 )); then
					echo "${red}ERROR${white}[${blue}${error}${white}]: o42ac failed." >&2;
				fi
				exit $error 
			fi
		} > /dev/fd/6
	} 5>&1 | pipe_if_not_empty ${CC} "${cc_args[@]}" >&6
} 6>&1
