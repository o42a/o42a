Use namespace 'Console'
Use namespace 'Test'

Loops := test
=============

Name = "Loops"

Print error '  ' [name] nl

Run tests

Exit := test (
  Name = "Exit"
  Print error '    ' [name] nl

  Result := ``1
  {
    Rt-integer '1' > 0? Result = 2!
    Result = 3
  }

  Assert [result == 2] "Block not exited"
)

Continue := test (
  Name = "Continue"
  Print error '    ' [name] nl

  Result := ``1
  {
    Rt-integer '1' > 0? Result = 2
    Result = 3
  }

  Assert [result == 3] "Block exited unexpectedly"
)

Repeat := test (
  Name = "Repeat"
  Print error '    ' [name] nl

  $Counter := ``3
  {
    Print error '    .. ' [counter] nl
    Counter = counter - 1
    Counter > 0? ...
  }
  
  Assert [counter == 0] "Loop terminated unexpectedly"
)

Repeat local scope := test (
  Name = "Repeat local scope"
  Print error '    ' [name] nl

  ``3 $ counter {
    Print error '    .. ' [counter] nl
    Counter = counter - 1
    Counter > 0? ...
    Assert [counter == 0] "Loop terminated unexpectedly"
  }
  
)
