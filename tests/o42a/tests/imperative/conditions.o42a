True := test (
  Name = "True"
  
  Print error '    ' [name] nl

  Value := void ({Rt-void}. = Rt-void)
  
  Assert [value] "Imperative is not true"
)

False := test (
  Name = "False"
  
  Print error '    ' [name] nl

  Value := void ({Rt-false}. = Rt-void)
  
  Assert [--value] "Imperative is not false"
)
