Use namespace 'Console'
Use namespace 'Test'

Init := test
==================

Name = "Variable Init"

Print error '  ' [name] nl

Var := ``1

{
  Print error "    Simple Declaration" nl

  Assert [var] "Initial value of variable is false"
  Assert [var == 1] "Wrong initial value of variable"
}

Var object := variable (`integer) 1

{
  Print error "    Object Declaration" nl

  Assert [var object] "Initial value of variable object is false"
  Assert [var object == 1] "Wrong initial value of variable object"
}
