Use namespace 'Console'
Use namespace 'Test'

Array as row := test
====================

Name = "Array as row"

Print error '  ' [name] nl

Array := $$array (`string) [["a", "b", "c"]]
Row := array: as row

{
  Assert [row [1] == "b"] "Wrong array as row"
  
  Array [1] = "new"
  Assert [row [1] == "new"] "Wrong value assigned to row item"
  Assert [row [2] == "c"] "Non-assigned row item altered"
  
  Array [rt-integer '2'] = "new2"
  Assert [row [2] == "new2"]
  "Wrong value assigned to row item with run-time index"
}
